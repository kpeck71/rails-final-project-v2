<div>
  <h2>All Ingredients</h2>
  <p><%= link_to 'Sort by Most Popular',ingredients_sort_by_popularity_path %></p>
  <p><%= link_to 'Sort by Name', ingredients_sort_abc_path %></p>
  <ul class="list-group">
    <% @ingredients.each do |ingredient| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to ingredient.name, ingredient_path(ingredient) %>
        <span class="badge badge-primary badge-pill"><%= pluralize(ingredient.recipes.count, "recipe") %></span>
      </li>
    <% end %>
  </ul>
  </div>
</div>
