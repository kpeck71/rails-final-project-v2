<%= form_for @recipe do |f| %>

  <%= f.fields_for :ingredients, @recipe.ingredients.build do |ingredients_field| %>
      <br><%= f.label "And Ingredient", :class => "h4" %>
      <%= ingredients_field.text_field :name %>
  <% end %>
    <br>
    <%= f.submit :class =>"btn btn-primary", :value => "Add Ingredient to Recipe" %>
<% end %>
