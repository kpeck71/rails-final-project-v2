<div>
  <%= form_for @recipe do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %><br></br>
  Ingredients:
  <br></br>
     <%= f.fields_for :ingredients do |ingredients_form| %>
         <%= ingredients_form.label :name %>
         <%= ingredients_form.text_field :name %>
         <%= ingredients_form.label :description %>
         <%= ingredients_form.text_field :description %>
         <br>
     <% end %>
  <br></br>
  <%= f.label "Instructions" %><br>
  <%= f.text_area :instructions %><br></br>

  <%= f.label "Categories" %><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  <%= f.fields_for :categories, @recipe.categories.build do |categories_fields| %>
    <br><%= f.label "And/or Create New Category" %>
    <%= categories_fields.text_field :name %>
  <% end %>
<br></br>
  <%= f.hidden_field :user_id, :value=>'2' %>

  <%= f.submit %>
  <% end %>
</div>
