<div>
  <div class="form-group">
    <%= form_for @recipe do |f| %>
    <% if @recipe.errors[:name].empty? %>
      <%= f.label "Recipe Name", :class => "h4" %>
      <%= f.text_field :name  %>
    <% else %>
      <%= f.label "Recipe Name" %>
      <%= f.text_field :name, :class => "card border-warning mb-3" %>
    </div>
    <% end %>
  </div>
  <div class="form-group">
    <h4>Ingredients:</h4>
       <%= f.fields_for :ingredients, @recipe.ingredients do |ingredients_form| %>
           <%= ingredients_form.label :name %>
           <%= ingredients_form.text_field :name %>
           <% if ingredients_form.object.id != nil %>
             <% recipe_ingredient = RecipeIngredient.find_by(recipe_id: @recipe.id, ingredient_id: ingredients_form.object.id)%>
             <%= recipe_ingredient.notes %>
             <%= link_to "Add/Edit Note?", edit_recipe_ingredient_path(@recipe.id, ingredients_form.object.id) %>
           <% end %>
           <!--  "/recipes/4/ingredients/20/edit" -->
           <!-- ingredients_form.object.id -->
           <br>
       <% end %>
  </div>

  <div class="form-group">
    <%= f.label "Instructions", :class => "h4" %>
    <%= f.text_area :instructions, :class => "exampleTextarea" %>
  </div>

  <div class="form-group">
    <%= f.label "Categories", :class => "h4" %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, :class => "form-check-label" %><br>
    <%= f.fields_for :categories, @recipe.categories.build do |categories_field| %>
      <br><%= f.label "And/or Create New Category", :class => "h4" %>
      <%= categories_field.text_field :name %>
    <% end %>
  </div>

    <%= f.hidden_field :user_id, :value => current_user.id  %>

    <%= f.submit :class =>"btn btn-primary", data: { disable_with: false } %>
  <% end %>
  <br>
</div>
