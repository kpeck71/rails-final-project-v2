<% if @recipes.blank? %>
  <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
<% else %>
  <% @recipes.each do |recipe| %>
  <h4><%= recipe.name %></h4>
  <% end %>
<% end %>

<h1>See All Recipes</h1>
<% Recipe.all.each do |recipe| %>
<%= link_to recipe.name, recipe_path(recipe) %><br></br>
<% end %>
